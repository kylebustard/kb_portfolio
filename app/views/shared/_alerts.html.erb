<% if flash[:alert] %>
<%= js add_gritter(flash[:alert],
	title: "TrackleApp Alert",
sticky: false) %>
<% elsif flash[:error] %>
<%= js add_gritter(flash[:error],
	title: "TrackleApp Error",
sticky: false) %>
<% else %>
<%= js add_gritter(flash[:notice],
	title: "TrackleApp Notification",
sticky: false) %>
<% end %>